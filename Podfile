# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'HAT' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for HAT
    pod 'Alamofire'
    pod 'SwiftyJSON'
    pod 'JWTDecode'
    pod 'SwiftyRSA'

  target 'HATTests' do
    inherit! :search_paths
    # Pods for testing
    pod 'Alamofire'
    pod 'SwiftyJSON'
    pod 'JWTDecode'
    pod 'SwiftyRSA'
    pod 'Mockingjay'
  end

end
